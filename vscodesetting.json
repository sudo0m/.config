{
    "diffEditor.ignoreTrimWhitespace": false,
    "explorer.confirmDelete": false,
    "security.workspace.trust.untrustedFiles": "open",
    "explorer.confirmDragAndDrop": false,
    "workbench.editor.untitled.hint": "hidden",
    "liveServer.settings.donotShowInfoMsg": true,
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "editor.fontSize": 20,
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.unicodeHighlight.allowedLocales": {
        "zh-hant": true
    },
    "window.zoomLevel": 1, //设置放大效果
    "editor.cursorBlinking": "smooth", //使编辑器光标的闪烁平滑，有呼吸感
    "editor.cursorSmoothCaretAnimation": "on", //让光标移动、插入变得平滑
    "workbench.list.smoothScrolling": true, //滚动变得平滑
    "workbench.colorTheme": "Dracula", //设置主题
    "workbench.iconTheme": "material-icon-theme", //设置图标
    "editor.guides.bracketPairs": true, //括号参考线
    "translateVariable.isCopy": false,
    "translateVariable.isTransHover": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.fontFamily": "Fira Code", //设置字体
    "editor.fontLigatures": true,
    "codeium.enableConfig": {
        "*": true
    },
}
